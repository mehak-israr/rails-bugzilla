<%= form_with(model: [@bug.project, @bug]) do |f| %>
  <% if @bug.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bug.errors.count, "error") %> prohibited this Bug from being saved:</h2>

      <ul>
      <% @bug.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :Title %><br />
    <%= f.text_field :title%>
  </div>

   <div class="field">
    <%= f.label :Deadline %><br />
    <%= f.date_select :deadline, start_year: 2000, end_year: Time.now.year %>
  </div>

  <div class="field">
    <%= f.label :type %><br />
    <%= f.select :type, Bug::TYPE_OPTIONS %>
  </div>

  <div class="field">
    <%= f.label :status %><br />
    <%= f.select :status, Bug::STATUS_OPTIONS %>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
