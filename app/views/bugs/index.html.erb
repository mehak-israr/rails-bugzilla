<h1>Index Bug</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Deadline</th>
    <th>Type</th>
    <th>Status</th>
    <th>Project</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bugs.each do |bug| %>
  <tr>
    <td><%= bug.title %></td>
    <td><%= bug.deadline %></td>
    <td><%= bug.type %></td>
    <td><%= bug.status %></td>
    <td><%= bug.project %></td>
    <td><%= link_to 'Show', [bug.project, bug] %></td>
    <td><%= link_to 'Edit', edit_project_bug_path(bug.project, bug) %></td>
    <td><%= link_to 'Destroy', [bug.project, bug], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Bug', new_project_bug_path(params[:project_id]) %>
