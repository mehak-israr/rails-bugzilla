<p id="notice"><%= notice %></p>

<h1>Bugs</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bugs.each do |bug| %>
      <tr>
        <td><%= bug/title %></td>
        <td><%= bug.project.name %></td>
        <td><%= link_to 'Show project', [@project] %></td>
        <td><%= link_to 'Edit bug', edit_project_bug_path(@project, bug) %></td>
        <td><%= link_to 'Destroy bug', [@project, bug], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New project', new_project_bug_path(@project) %>
